<?xml version="1.0" encoding="utf-8"?>
<resources>



    <style name="style_start_head">
        <item name="android:layout_margin">4dp</item>
    </style>



    <style name="MyButton">
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:background">@drawable/bg_item</item>
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">65dp</item>
    </style>


    <style name="MyButton2">
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/bg_item2</item>
        <item name="background">@drawable/bg_item</item>
    </style>

    <style name="MyButton3">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#0B64AA</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="color">@color/black</item>
        <item name="background">@drawable/bg_item</item>
        <item name="alpha">0.4</item>
    </style>

</resources>